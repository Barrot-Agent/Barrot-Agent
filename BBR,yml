name: Barrot Build Relay

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  update-manifest:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Generate Build Manifest
        run: |
          cat <<EOF > build_manifest.yaml
          build_signature: BNDL-V2
          timestamp: $(date -u +"%Y-%m-%dT%H:%M:%SZ")
          
          modules:
            - prediction_methodologies
            - deployment_integrity
            - builderio_microagent_logic
            - search_engine
            - dashboard
            - manifest_rail
            - cognitive_enhancement
            - autonomous_execution
          
          rail_status:
            ingestion: active
            deployment: stable
            microagent: recursive
            prediction: evolving
            dashboard: publishing
            cognition: recursive
          
          cognitive_state:
            authorization: pre-authorized
            level: enhanced
            autonomous_actions: enabled
            real_time_enhancement: active
            recursive_learning: engaged
            timestamp: $(date -u +"%Y-%m-%dT%H:%M:%SZ")
          EOF

      - name: Commit and Push Manifest
        run: |
          git config --global user.name "Barrot-Agent"
          git config --global user.email "barrot@systems.local"
          git add build_manifest.yaml
          git commit -m "Update build manifest"
          git push

      - name: Update Cognitive Snapshot
        run: |
          TIMESTAMP=$(date -u +"%Y-%m-%dT%H:%M:%SZ")
          
          # Update timestamp and activity in cognitive snapshot
          sed -i "s/\*\*Last Updated:\*\* .*/\*\*Last Updated:\*\* $TIMESTAMP  /" cognitive-snapshot.md
          
          # Append to activity feed
          sed -i "/## ðŸ”„ Live Activity Feed/a \\\n**$TIMESTAMP** â€” Build cycle completed â€” Cognitive state updated  " cognitive-snapshot.md
          
          git add cognitive-snapshot.md
          git commit -m "Update cognitive snapshot - $TIMESTAMP" || echo "No snapshot changes"
          git push

  publish-dashboard:
    runs-on: ubuntu-latest
    needs: update-manifest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Generate Dashboard HTML
        run: |
          echo "<html><body><h1>Barrot Build Status</h1>" > index.html
          echo "<pre>" >> index.html
          cat build_manifest.yaml >> index.html
          echo "</pre></body></html>" >> index.html

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: .
